@model WebHost.Areas.UserAccount.Models.ChangePasswordInputModel
@{
    ViewBag.Title = "Change Password";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary("Error")
    @Html.AntiForgeryToken()

    @*<div class="form-group">
        <legend>@ViewBag.Title</legend>

        @Html.EditorForModel()
       
    </div>*@
    <hr />
        <div class="form-group">
            <label for="OldPassword">Old Password</label>
            @Html.PasswordFor(x => x.OldPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.OldPassword)
        </div>
        <div class="form-group">
            <label for="NewPassword">New Password</label>
            @Html.PasswordFor(x => x.NewPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.NewPassword)
        </div>
        <div class="form-group">
            <label for="NewPasswordConfirm">Confirm New Password</label>
            @Html.PasswordFor(x => x.NewPasswordConfirm, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.NewPasswordConfirm)
        </div>
    
    
     <div class="form-group">
            <button class="btn btn-primary">Change Password</button>
        </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}